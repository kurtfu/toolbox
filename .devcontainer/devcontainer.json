{
    "image": "sandbox",
    "runArgs": ["--name", "sandbox"],
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "editorconfig.editorconfig",
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-azuretools.vscode-docker",
                "ms-python.autopep8",
                "ms-python.isort",
                "ms-python.python",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools",
                "vadimcn.vscode-lldb"
            ]
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/sandbox,type=bind",
    "workspaceFolder": "/sandbox"
}
